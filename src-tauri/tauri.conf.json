{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickBuild Tray Monitor",
  "mainBinaryName": "tray-monitor",
  "version": "0.1.0",
  "identifier": "com.pmease.quickbuild.traymonitor",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "minimizable": false,
        "transparent": false,
        "decorations": true,
        "label": "main",
        "title": "QuickBuild Tray Monitor",
        "width": 480,
        "height": 700,
        "minHeight": 700,
        "minWidth": 480
      },
      {
        "transparent": false,
        "decorations": true,
        "resizable": true,
        "visible": false,
        "label": "dashboard",
        "title": "QuickBuild Tray Monitor - Dashboard",
        "url": "/dashboard",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "**/*.jpg",
          "**/*.webp",
          "$RESOURCE/**",
          "**/*.riv",
          "$HOME/**"
        ]
      }
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 430
        },
        "appPosition": {
          "x": 177,
          "y": 200
        },
        "applicationFolderPosition": {
          "x": 483,
          "y": 200
        }
      }
    },
    "windows": {},
    "publisher": "PMEase",
    "category": "DeveloperTool",
    "shortDescription": "Tray Monitor - A Desktop Application for QuickBuild",
    "longDescription": "Tray Monitor is a desktop application built with Tauri and React that provides real-time monitoring and management capabilities for QuickBuild servers directly from your system tray.",
    "copyright": "Copyright Â© 2025 PMEase. All rights reserved."
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoint": "https://github.com/PMEase/traymonito/releases/latest/download/latest.json",
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5MDMyMkQwRUMwOTQ3QTkKUldTcFJ3bnMwQ0lEU1ZBV1lWYnRUS1kzaXRtR2w5ZHN5bmxjZzJhb0NlMDYzTVMvOTJxU1Vvd2MK"
    }
  }
}
