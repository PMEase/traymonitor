{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickBuild Tray Monitor",
  "version": "0.1.0",
  "identifier": "com.pmease.quickbuild.traymonitor",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "minimizable": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "label": "main",
        "title": "QuickBuild Tray Monitor - Dashboard",
        "width": 420,
        "height": 600,
        "minHeight": 106,
        "minWidth": 64
      },
      {
        "transparent": true,
        "decorations": true,
        "resizable": false,
        "visible": false,
        "label": "settings",
        "title": "QuickBuild Tray Monitor - Settings",
        "width": 600,
        "height": 400
      }
    ],
    "security": {
      "csp": "default-src 'self' ws: ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob: data:; media-src 'self' asset: http://asset.localhost; script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "**/*.jpg",
          "**/*.webp",
          "$RESOURCE/**",
          "**/*.riv",
          "$HOME/**"
        ]
      }
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 140
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 140
        }
      }
    },
    "windows": {},
    "publisher": "PMEase",
    "category": "DeveloperTool",
    "shortDescription": "Tray Monitor - A Desktop Application for QuickBuild",
    "longDescription": "Tray Monitor is a desktop application built with Tauri and React that provides real-time monitoring and management capabilities for QuickBuild servers directly from your system tray.",
    "copyright": "Copyright Â© 2025 PMEase. All rights reserved."
  },
  "plugins": {
    "updater": {
      "active": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA2NjNFQjA2QzcxN0JBODEKUldTQnVoZkhCdXRqQnBUZjBUL0x4Q0tUb0xuWmdtcm5UQUNmMjJ2Z3NZeVJxLzBOMVdtODRHd08K"
    }
  }
}
