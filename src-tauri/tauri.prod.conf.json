{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickBuild Tray Monitor",
  "mainBinaryName": "tray-monitor",
  "identifier": "com.pmease.quickbuild.traymonitor",
  "build": {
    "beforeBundleCommand": "pnpm run build"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.pmease.com/update/tray-monitor/tray-monitor/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    }
  },
  "bundle": {
    "macOS": {
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "wix": {
        "upgradeCode": "YOUR_UPGRADE_CODE_HERE"
      }
    }
  }
}
